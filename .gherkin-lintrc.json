{   "allowed-tags": ["on", {"tags":
    ["@DEV-ONLY", "@SANITY", "@API", "@E2E", "@SMOKE", "@REGRESSION", "@BUG", "@WIP", "@DEPRECATED", "@FLEET",
      "@REFACTOR-NEEDED", "@PARTNER-API", "WHITELABEL", "@FLAKY", "@KEY-FOB", "@STAGE-ONLY"],
      "patterns": ["^@EVC-*", "^@MR-*", "^@TR-C*", "^@delete-*", "^@P[0-4]$", "AT-*"]}],
    "max-scenarios-per-file": ["on", {"maxScenarios": 50, "countOutlineExamples": true}],
    "name-length": ["on", { "Feature": 80, "Scenario": 80, "Step": 100 }],
    "new-line-at-eof": ["on", "no"],
    "no-background-only-scenario": "on",
    "no-dupe-feature-names": "on",
    "no-dupe-scenario-names": ["on", "anywhere"],
    "no-duplicate-tags": "on",
    "no-empty-background": "on",
    "no-empty-file": "on",
    "no-examples-in-scenarios": "on",
    "no-files-without-scenarios" : "on",
    "no-multiple-empty-lines": "on",
    "no-partially-commented-tag-lines": "on",
    "no-scenario-outlines-without-examples": "on",
    "no-trailing-spaces": "on",
    "no-unnamed-features": "on",
    "no-unnamed-scenarios": "on",
    "no-unused-variables": "on",
    "one-space-between-tags": "on",
    "scenario-size": ["on", { "steps-length": { "Background": 24, "Scenario": 37 }}],
    "use-and": "on",
    "keywords-in-logical-order": "on"
}