{
  "name": "test_framework",
  "main": "index.js",
  "scripts": {
    "test": "node helpers/browser.js && mocha --no-timeouts --parallel --reporter mochawesome --require mochawesome/register",
    "e2e": "cucumber-js features/e2e/**/*.feature --tags 'not skip'",
    "cleanup": "node scripts/cleanUpReportsFolder.js",
    "test:report": "npm run test && npm run report",
    "e2e:test:report": "npm run e2e && npm run test:report",
    "new:report": "mocha --reporter mochawesome --require mochawesome/register --reporter-options reportDir=customReportDir,reportFileName=customReportFileName",
    "go": "npx cucumber-js features/e2e/register-e2e.feature",
    "api": "npx cucumber-js features/api/login-api.feature",
    "all": "npx cucumber-js",
    "config": "npx cucumber-js --config config/cucumber.js features/e2e/register-e2e.feature",
    "start": "npm run cleanup && npm run config",
    "lint-fix": "eslint --fix",
    "report": "node index.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "fs-extra": "^11.2.0",
    "gherkin-lint": "^4.2.4",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "mocha": "^10.7.3",
    "pactum": "^3.7.3",
    "path": "^0.12.7",
    "selenium-webdriver": "^4.25.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.0.1",
    "@eslint/js": "^9.14.0",
    "@faker-js/faker": "^9.2.0",
    "chai": "^5.1.2",
    "cucumber-html-reporter": "^6.0.0",
    "eslint": "^9.14.0",
    "globals": "^15.12.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{js, feature}": "prettier --write",
    "*.js": "eslint",
    "*.feature": "npx gherkin-lint -c .gherkin-lintrc.json"
  }
}
